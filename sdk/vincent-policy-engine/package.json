{
  "name": "@metron/vincent-policy-engine",
  "version": "0.1.0",
  "description": "Vincent Policy Engine for managing agent spending limits and enforcement for x402-enabled APIs",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsx --watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts --fix",
    "lint:check": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\""
  },
  "keywords": [
    "vincent",
    "policy",
    "x402",
    "hedera",
    "spending-limits",
    "delegation",
    "autonome"
  ],
  "license": "Apache-2.0",
  "author": "Metron Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/metron/vincent-policy-engine"
  },
  "dependencies": {
    "@hashgraph/did-sdk-js": "^0.1.1",
    "@lit-protocol/vincent-ability-sdk": "^0.1.0",
    "@metron/x402": "file:../x402",
    "zod": "^3.24.2",
    "viem": "^2.21.26",
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "dotenv": "^17.2.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/cors": "^2.8.17",
    "@types/node": "^22.13.4",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "eslint": "^9.24.0",
    "prettier": "3.5.2",
    "tsup": "^8.4.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    },
    "./types": {
      "import": {
        "types": "./dist/esm/types/index.d.ts",
        "default": "./dist/esm/types/index.js"
      },
      "require": {
        "types": "./dist/cjs/types/index.d.ts",
        "default": "./dist/cjs/types/index.js"
      }
    },
    "./client": {
      "import": {
        "types": "./dist/esm/client/index.d.ts",
        "default": "./dist/esm/client/index.js"
      },
      "require": {
        "types": "./dist/cjs/client/index.d.ts",
        "default": "./dist/cjs/client/index.js"
      }
    },
    "./server": {
      "import": {
        "types": "./dist/esm/server/index.d.ts",
        "default": "./dist/esm/server/index.js"
      },
      "require": {
        "types": "./dist/cjs/server/index.d.ts",
        "default": "./dist/cjs/server/index.js"
      }
    }
  },
  "files": [
    "dist"
  ]
}
